rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Publicly allow creating self-registration requests with basic validation
    match /ownerRegistrations/{requestId} {
      allow create: if
        request.resource.data.compoundId is string &&
        request.resource.data.firstName is string &&
        request.resource.data.lastName is string &&
        request.resource.data.email is string;

      // Only authenticated users can read registrations
      allow read: if request.auth != null;

      // Only the compound admin can update status; derive admin from compound doc
      allow update: if request.auth != null &&
        get(/databases/$(database)/documents/compounds/$(resource.data.compoundId)).data.adminId == request.auth.uid;

      // No deletes from clients
      allow delete: if false;
    }

    // Default: authenticated users only
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}